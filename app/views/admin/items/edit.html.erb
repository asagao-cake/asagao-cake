<div id = "title">
  <h2>商品編集</h2>
</div>

<%= form_with model:@item, url: admin_item_path(@item.id), method: :patch,local:true do |f| %>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg' %>
      <%= f.attachment_field :image %>
    </div>
    <div class="col-lg-8">
      <table class="item-table">
        <tr>
          <td><%= f.label :商品名 %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><%= f.label :商品説明 %></td>
          <td><%= f.text_field :description %></td>
        </tr>
        <tr>
          <td><%= f.label :ジャンル %></td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください"  %></td><br>
        </tr>
        <tr>
          <td><%= f.label :税込み価格 %></td>
          <td><%= f.text_field :price %></td><br>
        </tr>
        <tr>
          <td><%= f.label :販売ステータス %>
          <td><%= f.select :is_sale, [["販売中", "1"],["販売停止中", "0"]], include_blank: "選択してください" %></td><br>
        </tr>
      </table>
    <div id = "item-action-btn">
      <%= f.submit :変更を保存, class: "btn btn-default btn-lg btn-info " %>
    </div>
    <% end %>
    </div>
  </div>
</div>