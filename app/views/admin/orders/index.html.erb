<div class="title-area">
  <h3><span class="order-info-title">　注文履歴一覧　</span></h3>
</div>

<div class="container-fluid">
  <div class="row-sm-12 order-info-table">

    <div class="col-sm-12 table-responsive">
    <!--注文履歴一覧テーブル-->
      <table class="table table-hover">
        <thead>
          <tr class="success">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% "@orders.each do |order|が入ります" %>
            <tr>
              <td><%= "order.created_at" %></td>
              <td><%= "order.name" %></td>
              <td><%= "order.item_count" %></td>
              <td><%= "order.status" %></td>
            </tr>
          <% "endがはいります" %>
        </tbody>
      </table>
    </div>
    
    <!--ページネーション-->
    <divclass="pagenation"><%= "paginate @pages" %></div>

  </div>
</div>