<div class="title-area">
  <h3><span class="order-info-title">　管理者注文履歴詳細　</span></h3>
</div>

<div class="container-fluid">

  <div class="row-sm-12 order-info-show">
  <!--注文者情報テーブル-->
    <table class="table">
        <tr>
          <th class="">購入者</th>
          <td><%= @order.name %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.address %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <%= form_with model:@order_status, url: admin_order_path, method: :patch,local:true do |f| %>
            <td>
              <%= f.select :is_sale, [["入金待ち", "0"],["入金確認", "1"],["制作中", "2"],["発送準備中", "3"],["発送済み", "4"]], include_blank: "選択してください" %>
              <%= f.submit :更新, class: "btn btn-md btn-primary" %>
            </td>
          <% end %>

        </tr>
      </table>
  </div>

  <div class="row-sm-12 order-info-show">

    <div class="col-sm-9 order-info-show">
    <!--注文商品テーブル-->
      <table class="table table-hover">
        <thead>
          <tr class="success">
            <th>商品名</th></th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th><!--更新ボタン--></th>
          </tr>
        </thead>

        <tbody>
            <tr>
            <% @orders.each do |order| %>
              <td><%= order.name %></td>
              <td><%= order.price_including_tax %></td>
              <td><%= order.item_count %></td>
            <% end %>
              <td><%= "小計が入ります！" %></td>
              <%= form_with model:@production_status, url: admin_order_detail_path, method: :patch,local:true do |f| %>
                <td><%= f.select :production_status, [["着手不可", "0"],["製作待ち", "1"],["製作中", "2"],["製作完了", "3"]], include_blank: "選択してください" %></td>
                <td><%= f.submit :更新, class: "btn btn-md btn-primary" %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>

    <div class="col-sm-3 order-info-show">
    <!--金額情報テーブル-->
      <table class="table table-noborder">
        <tr>
          <th class="success">商品合計</th>
          <td><%= %>円</td>
        </tr>
        <tr>
          <th class="success">送料</th>
          <td><%= %>円</td>
        </tr>
        <tr>
          <th class="success">請求金額合計</th>
          <td><%= %>円</td>
        </tr>
      </table>
    </div>

  </div>

</div>
