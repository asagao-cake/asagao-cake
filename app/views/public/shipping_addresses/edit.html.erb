<div class="container">
  <div class="row">
    <h3 class="edit-title">配送先編集</h3>
    <div class="col-md-11">
        <%= form_with model: @address, local: true do |f| %>
        <% if @address.errors.any? %>
            <div class="alert alert-position">
              <ul>
                <% @address.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <label for="inputPostcode3" class="col-sm-3 control-label"><%= f.label :"郵便番号(ハイフンなし)" %></label>
              <div class="col-sm-3">
                <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", class: "form-control", id:"inputPostcode3" %>
              </div>
          </div>
          <br></br><br></br>
          <div class="form-group">
            <label for="inputAddress3" class="col-sm-3 control-label"><%= f.label :住所 %></label>
              <div class="col-sm-8">
                <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control", id:"inputAddress3" %>
              </div>
          </div>
          <br></br><br></br>
          <div class="form-group">
            <label for="inputName3" class="col-sm-3 control-label"><%= f.label :宛名 %></label>
              <div class="col-sm-3">
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", id:"inputName3" %>
              </div>
              <div class="col-sm-5">
                <%= f.submit "編集する", class:"btn btn-primary pull-right" %>
              </div>
          </div>
        <% end %>
    </div>
  </div>
</div>