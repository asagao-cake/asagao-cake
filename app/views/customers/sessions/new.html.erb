<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-3">
    <h4 class="login-title">会員の方はこちらからログイン</h4>
      <%= form_with model: @customer, url: customer_session_path do |f| %>
        <form class="form-horizontal">
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label"><%= f.label :メールアドレス %></label>
              <div class="col-sm-5">
                <%= f.email_field :email, autofocus: true, sautocomplete: "email", class: "form-control", id:"inputEmail3" %>
              </div>
          </div>
          <br></br>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label"><%= f.label :パスワード %></label>
              <div class="col-sm-5">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id:"inputPassword3" %>
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "=>パスワードを忘れた方はこちらから", new_password_path(resource_name), class:"pull-right" %><br />
                <% end %>
              </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "ログイン", class:"btn btn-primary" %>
            </div>
          </div>
        </form>
      <% end %>
      <br></br><br></br>
    </div>
    <div class="col-md-10 col-md-offset-3">
      <h4 class="signup-title">登録がお済みでない方</h4>
      <div class="col-sm-7">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <p><%= link_to "こちら", new_registration_path(resource_name)%>から新規登録を行ってください</p>
        <% end %>
      </div>
    </div>
  </div>
</div>



