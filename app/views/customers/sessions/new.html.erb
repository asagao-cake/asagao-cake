<div class="container">
  <div class="row">
    <div class="col-md-9 col-md-offset-3">
      <h3>会員の方はこちらからログイン</h3>
      <%= form_with model: @customer do |f| %>
      <table class="table table-hover">
        <tr>
          <td><%= f.label :メールアドレス %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :パスワード %></td>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>
      </table>
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
      <%= render "customers/shared/links" %>
    </div>
  </div>
</div>


