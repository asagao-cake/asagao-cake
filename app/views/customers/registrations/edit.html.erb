<div class="title-area-password">
  <h3><span class="mypage-title">　パスワード変更　</span></h3>
</div>

<div class="container">
  <div class="row-sm-12">
    <div class="col-md-8 col-md-offset-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :新しいパスワード %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em><% @minimum_password_length %></em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :新しいパスワードをもう一度入力 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :現在使用しているパスワード  %> <br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
    </dv>
  </dv>
  <div class="row">
    <div class="col-md-3">
      <div class="actions">
        <%= f.submit "変更", class: "btn btn-default btn-lg btn-primary create-btn" %>
      </div>
    </div>
  </div>
  <% end %>
</dv>

